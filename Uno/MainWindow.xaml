<Window x:Class="Uno.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Uno"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>

        <Grid 
        
        Width="794" Height="411">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Label 
                Name="Player1"
                Content="Player1" 
                HorizontalAlignment="Center" 
                Margin="0,45,0,0" VerticalAlignment="Top"
            />

            <Label 
                Name="Player2"
                Grid.Column="1" 
                Content="Player2" 
                HorizontalAlignment="Center" 
                Margin="0,45,0,0" VerticalAlignment="Top"
            />
            <Label 
                Name="Player3"
                Grid.Column="2" 
                Content="Player3" 
                HorizontalAlignment="Center" 
                Margin="0,45,0,0" VerticalAlignment="Top"
            />

            <Label 
                Name="Player4"
                Grid.Column="2" 
                Grid.Row="1" 
                Content="Player4" 
                HorizontalAlignment="Center" 
                Margin="0,45,0,0" VerticalAlignment="Top"
            />

            <Label 
                Name="Player5"
                Grid.Column="2" 
                Grid.Row="2" 
                Content="Player5" 
                HorizontalAlignment="Center" 
                Margin="0,45,0,0" VerticalAlignment="Top"
            />

            <Label 
                Name="Player6"
                Grid.Column="1" 
                Grid.Row="2" 
                Content="Player6" 
                HorizontalAlignment="Center" 
                Margin="0,45,0,0" VerticalAlignment="Top"
            />

            <Label 
                Name="Player7"
                Grid.Column="0" 
                Grid.Row="2" 
                Content="Player7" 
                HorizontalAlignment="Center" 
                Margin="0,45,0,0" VerticalAlignment="Top"
            />

            <Label 
                Name="Player8"
                Content="Player8" 
                HorizontalAlignment="Center" 
                Margin="0,45,0,0" VerticalAlignment="Top" 
                Grid.Row="1" 
            />

            <Label 
                Grid.Column="1" 
                Grid.Row="1"
                Content="Deck" 
                HorizontalAlignment="Center" 
                Margin="0,45,0,0" VerticalAlignment="Top"
            />
            
        </Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Content="Enter the number of Players" Grid.Column="0" HorizontalAlignment="Right"/>
            <TextBox Name="NumberOfPlayers" Grid.Column="1"/>
            <Button Grid.Column="2" Click="PlayButton_Click" Content="Play"/>
        </Grid>
        <Popup Name="myPopup" IsOpen="True" >
            <Border BorderThickness="1">
                <TextBlock Name="myPopupText" Background="LightBlue" Foreground="Blue" Padding="30">
                Popup Text
                </TextBlock>
            </Border>
        </Popup>
    </StackPanel>
</Window>
